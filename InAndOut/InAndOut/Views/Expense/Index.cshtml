
@{ViewData["Title"] = "Expense"; }
@model IEnumerable<InAndOut.Models.Expense>


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h1 class="text-primary">Expenses List</h1>
        </div>
        <div class="col-6 text-right">
            <a class="btn btn-primary" asp-controller="Expense" asp-action="Create">Create new expense</a>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Expense Name
                    </th>
                    <th>
                        Amount
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var expense in Model)
                {
                <tr>
                    <td width="25%">@expense.ExpenseName</td>
                    <td width="25%">@expense.Amount</td>
                    <td width="25%">
                        <div class="w-100 btn-group" role="group">
                            <form method="post" asp-controller="Expense">
                                <div>
                                    <a asp-action="Update" asp-route-Id="@expense.Id" class="btn btn-primary mx-1">Update</a>
                                    <input type="submit" asp-action="Delete" asp-route-Id="@expense.Id" class="btn btn-danger mx-1" value="Delete" />
                                </div>
                            </form>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No items created yet</p>
    }
</div>
