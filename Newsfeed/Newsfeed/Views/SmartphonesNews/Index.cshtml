@{ViewData["Title"] = "Smartphones News"; }
@model IEnumerable<Newsfeed.Models.SmartphonesNews>


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h1 class="text-primary">Smartphones News</h1>
        </div>
        <div class="col-6 text-right">
            <a class="btn btn-primary" asp-controller="SmartphonesNews" asp-action="Create">Create news</a>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {

        @foreach (var news in Model)
        {
            <div width="100%">
                <div>
                    <form method="post" asp-controller="SmartphonesNews">
                        <div width="65%">
                            <h3 class="text-primary">@news.Topic</h3>
                            <p>@news.DateTimeCreated</p>
                        </div>
                        <div class="w-25 btn-group" role="group">
                            <a asp-action="Update" asp-route-Id="@news.Id" class="btn btn-primary mx-1">Update</a>
                            <input type="submit" asp-action="Delete" asp-route-Id="@news.Id" class="btn btn-danger mx-1" value="Delete" />
                        </div>
                    </form>
                </div>
                <div>@news.Content</div>
            </div>
        }

    }
    else
    {
        <p>No news created yet</p>
    }
</div>