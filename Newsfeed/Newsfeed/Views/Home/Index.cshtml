@{ViewData["Title"] = "Home Page";}
@model IEnumerable<Newsfeed.Models.Home>

<div class="container p-3">
    <br />
    @if (Model.Count() > 0)
    {
        @foreach (var news in Model)
        {
            <div width="100%">
                <div>
                    <h3 class="text-primary">@news.Topic</h3>
                    <p>@news.DateTimeCreated</p>
                </div>
                <div>@news.Content</div>
            </div>
        }
    }
    else
    {
        <p>No news created yet</p>
    }
</div>
